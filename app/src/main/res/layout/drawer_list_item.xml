<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/list_selector">

    <ImageView
        android:id="@+id/drawer_colored_box"
        android:layout_width="3dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:contentDescription="@string/search"
        android:src="@drawable/drawer_colored_rectangle" />

    <ImageView
        android:id="@+id/drawer_icon"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/drawer_colored_box"
        android:contentDescription="@string/search"
        android:src="@drawable/epita"
        android:layout_centerVertical="true" />


    <TextView
        android:id="@+id/drawer_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/drawer_colored_box"
        android:layout_toRightOf="@+id/drawer_icon"
        android:minHeight="45dp"
        android:paddingRight="40dp"
        android:text="Epita"
        android:gravity="center"
        android:textColor="#FFF" />

</RelativeLayout>