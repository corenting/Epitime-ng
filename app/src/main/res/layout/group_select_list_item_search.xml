<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="match_parent"
   	android:layout_height="wrap_content"
 	android:orientation="horizontal" >
        
	<ImageView
	    android:id="@+id/group_select_list_section_short_image"
	    android:layout_width="70dp"
	    android:layout_height="70dp"
	    android:background="@drawable/group_select_list_short_background"
	    android:contentDescription="@string/search"
	    android:fontFamily="sans-serif"
	    android:gravity="center"
	    android:padding="16dp"
	    android:src="@drawable/ic_action_search"
	    android:textStyle="bold" />

	<EditText
	    android:id="@+id/group_select_list_section_input"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:layout_toRightOf="@+id/group_select_list_section_short_image"
	    android:background="@drawable/group_select_list_long_background"
	    android:fontFamily="sans-serif"
	    android:gravity="center"
	    android:hint="@string/search"
	    android:textColor="#fff"
	    android:textSize="28sp"
	    android:inputType="text"
	    android:textStyle="bold" />
    
</RelativeLayout>