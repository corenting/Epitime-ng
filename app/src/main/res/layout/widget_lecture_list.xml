<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_linear_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:color="@color/background_material_dark"
    tools:showIn="@layout/widget_info">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_title_layout"
        android:background="@color/group_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_lecture_group_title"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="center"
            android:typeface="sans"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/widget_lecture_day"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:background="@color/date_background"
        android:textColor="#fff"
        android:textSize="18sp"
        android:gravity="center"
        android:typeface="sans"
        />

    <ListView
        android:id="@+id/widget_lecture_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/background_material_dark"
        android:dividerHeight="1dp"
        android:background="@color/background_material_dark"
        />
</LinearLayout>