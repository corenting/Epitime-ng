<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="match_parent"
   	android:layout_height="wrap_content"
 	android:orientation="horizontal" >
        

	<ProgressBar
        android:id="@+id/group_select_list_section_spinner"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/group_select_list_short_background" /> 

	<TextView
	    android:id="@+id/group_select_list_connecting_text"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:layout_toRightOf="@+id/group_select_list_section_spinner"
	    android:background="@drawable/group_select_list_long_background"
	    android:fontFamily="sans-serif"
	    android:gravity="center"
	    android:text="@string/connecting"
	    android:textColor="#fff"
	    android:textSize="20sp"
	    android:textStyle="bold" />
    
</RelativeLayout>