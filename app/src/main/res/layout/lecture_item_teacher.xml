<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lecture_item_background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/list_background"
    android:padding="5dip">


    <TextView
        android:id="@+id/CourseTimeBegin"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/data_begin"
        android:textColor="#fff"
        android:textSize="15sp"
        android:typeface="sans"
        android:paddingBottom="5dp" />

    <TextView
        android:id="@+id/CourseTimeEnd"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/data_end"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_below="@+id/CourseTitle"
        android:typeface="sans"
        android:paddingTop="5dp" />

    <LinearLayout
     android:id="@+id/lecture_item_teacher_time"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_centerVertical="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/CourseTime"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/data_dash"
            android:textColor="#fff"
            android:textSize="15sp"
            android:typeface="sans" />

    </LinearLayout>

    <TextView
        android:id="@+id/CourseTitle"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="ING1/GRA1"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:typeface="sans" />


    <TextView
        android:id="@+id/CourseRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_lecture_room"
        android:paddingTop="5dp"

        android:textColor="#fff"
        android:textSize="15sp"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/CourseTitle"
        android:layout_gravity="right" />

    <TextView
        android:id="@+id/Course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:text="Mathematiques"
        android:textColor="#fff"
        android:textSize="15sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:typeface="sans"

        android:width="140dp"
        android:layout_below="@+id/CourseTitle"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:gravity="right" />

</RelativeLayout>