<?xml version="1.0" encoding="utf-8"?>

<!-- Of course in android api < 12 bottom left and bottom right corners are inverted !-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@+id/short_title_shadow">
	    <shape android:shape="rectangle" >
	        <solid android:color="#962d22" />
	        <stroke android:color="#962d22"
	            android:width="4dp" />
	        <padding android:bottom="4dp"/>
	        <corners android:topLeftRadius="5dp" android:bottomRightRadius="5dp"/>
	    </shape>
	</item>
	
	<item android:id="@+id/short_title_color">
	    <shape android:shape="rectangle">
	        <solid android:color="#c0392b" />
	        <stroke android:color="#c0392b" android:width="1dp"/>
	        <corners android:topLeftRadius="5dp" android:bottomRightRadius="5dp"/>
	    </shape>
	</item>
</layer-list>
